@model UserModel
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signIn

<div class="login-box">
    <div class="login-logo">
        <p><b>Store</b>Website</p>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form asp-action="LoginAction" method="post" role="form">
                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger mb-1"></span>
                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger mb-1"></span>
                <div style="margin-left:100px">
                    @if (!signIn.IsSignedIn(User))
                    {
                        <input  type="submit" value="Submit" class="mx-1 btn  btn-success" />
                        <input type="reset" value="Reset" class="btn  btn-danger" />
                    }
                    
                </div>
            </form>
             @if (signIn.IsSignedIn(User))
             {
                <div style="margin-left:120px ; margin-top: 12px">
                    <a  asp-action="Logout" class="mx-1 btn btn-info" >LogOut</a>
                </div>
             }
          
           @* <p class="mb-0">
                <a asp-action="Register" class="text-center">Register a new membership</a>
            </p>*@
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->