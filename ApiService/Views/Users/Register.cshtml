@model UserModel

<div class="register-box">
    <div class="register-logo">
        <p><b>Store</b>Website</p>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>

            <form asp-action="RegisterAction" method="post" role="form">
                <div class="input-group mb-3">
                    <input asp-for="FirstName" type="text" class="form-control"
                    placeholder="First Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span class="text-danger mb-1" asp-validation-for="FirstName"></span>
                <div class="input-group mb-3">
                    <input asp-for="LastName" type="text" class="form-control"
                    placeholder="Last Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <span class="text-danger mb-1" asp-validation-for="LastName"></span>
                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" 
                    class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span class="text-danger mb-1"  asp-validation-for="Email"></span>
                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control"
                    placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span class="text-danger mb-1" asp-validation-for="Password"></span>
                <div class="mb-1" style="margin-left:100px">
                    <input type="submit" value="Submit" class="mx-1 btn btn-lg btn-success" />
                    <input type="reset" value="Reset" class="btn btn-lg btn-danger" />
                </div>
            </form>

            <a asp-action="Login" class="text-center">I already have a membership</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->